<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ba.etf.us.typi.KeyboardView

        android:id="@+id/keyboard_view"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:keyTextColor="@color/purple_200">

    </ba.etf.us.typi.KeyboardView>

    <HorizontalScrollView
        android:id="@+id/topHScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/packsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/packContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topHScrollView" />
</LinearLayout>