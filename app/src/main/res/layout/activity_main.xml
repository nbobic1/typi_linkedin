<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="88dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toTopOf="@+id/enableKbBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/robot_gray2" />

    <Button
        android:id="@+id/enableKbBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/enableKbBtn"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/dark_gray"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/defaultKbBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaultKbBtn"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:background="@color/dark_gray"

        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/testLable"
        app:layout_constraintBottom_toTopOf="@+id/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:text="Step 4: Make a meaningful impact on our journey! Once you've used Typi, simply fill out our form and help us grow! "
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:autoLink="web"
        app:layout_constraintBottom_toTopOf="@+id/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <EditText
        android:id="@+id/input"
        android:layout_width="298dp"
        android:layout_height="346dp"
        android:layout_marginBottom="140dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Name a city"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>